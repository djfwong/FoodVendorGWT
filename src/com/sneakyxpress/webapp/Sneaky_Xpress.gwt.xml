<?xml version="1.0" encoding="UTF-8"?>
<!-- When updating your version of GWT, you should also update this DTD reference, 
	so that your app can take advantage of the latest GWT module capabilities. -->
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.5.1//EN"
  "http://google-web-toolkit.googlecode.com/svn/tags/2.5.1/distro-source/core/src/gwt-module.dtd">

<module rename-to="sneaky_xpress">
	<!-- Inherit the core Web Toolkit stuff. -->
	<inherits name="com.google.gwt.user.User" />

	<!-- Use bootstrap styling -->
	<inherits name="com.github.gwtbootstrap.Bootstrap" />

	<!-- Google Maps v3 -->
	<inherits name="com.google.maps.gwt.GoogleMaps" />

	<!-- OAuth -->
	<inherits name="com.google.api.gwt.oauth2.OAuth2" />

	<!-- Other module inherits -->
	<inherits name="com.google.gwt.logging.Logging" />
	<set-property name="gwt.logging.logLevel" value="INFO" />
	<set-property name="gwt.logging.enabled" value="TRUE" />
	<set-property name="gwt.logging.popupHandler" value="DISABLED" />

	<!-- Specify the app entry point class. -->
	<entry-point class="com.sneakyxpress.webapp.client.Sneaky_Xpress" />

	<!-- Specify other servlets -->
	<servlet path="/browseVendors"
		class="com.sneakyxpress.webapp.server.BrowseVendorsServiceImpl" />
	<servlet path="/updateData"
		class="com.sneakyxpress.webapp.server.UpdateDataServiceImpl" />
	<servlet path="/addUser"
		class="com.sneakyxpress.webapp.server.PersistUserServiceImpl" />

	<!-- Specify the paths for translatable code -->
	<source path="client" />
	<source path="shared" />

</module>
